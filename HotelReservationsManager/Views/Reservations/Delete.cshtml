@model DetailsReservationViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccommodationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccommodationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmptyDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmptyDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WithBreakfast)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WithBreakfast)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AllInclusive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AllInclusive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <div class="col-md-4">
        @if (Model.Clients.Any())
        {
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Clients)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                <a asp-controller="Clients" asp-action="Details" asp-route-id="@item.Id"><i class="btn btn-info"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>